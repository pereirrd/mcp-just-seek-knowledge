# PostgreSQL Connection
# URL completa de conexão ao PostgreSQL com pgVector
# Formato: postgresql://user:password@host:port/database
PGVECTOR_URL=postgresql://postgres:postgres@localhost:5433/software_design_knowledge

# PostgreSQL Database Configuration
# Opcional: se PGVECTOR_URL não for definida, estas variáveis serão usadas
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=software_design_knowledge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embedding Configuration
EMBEDDING_DIMENSION=1536
